<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--日间模式-->
    <style name="AppBaseTheme_Light" parent="AppBaseTheme_Light.Base" />
    <style name="AppBaseTheme_Light.Base" parent="@style/Theme.AppCompat.Light">
        <item name="elevation">0dp</item>
        <!--最上面状态栏的颜色-->
        <item name="colorPrimary">@color/day_colorPrimary</item>
        <!--导航栏颜色-->
        <item name="android:colorPrimaryDark">@color/gray</item>
        <!--加了link链接的文本-->
        <item name="android:textColorLink">#0b9a27</item>
        <!--控件被选中以后的颜色-->
        <item name="android:colorAccent">@color/day_colorPrimary</item>
        <!--导航条文本的基本颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--编辑文本中的颜色-->
        <item name="android:editTextColor">@color/gray</item>
        <!---->
        <item name="android:actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <!--窗口的背景色-->
        <item name="android:windowBackground">@color/window_background</item>
        <!--menu中的文本颜色-->
        <item name="android:actionMenuTextColor">@color/white</item>
        <!--文本颜色-->
        <item name="android:textColor">@color/day_textColor</item>
        <!--自定义属性-->
        <item name="infoTextColor">@color/day_infoTextColor</item>
        <!--自定义属性-->
        <item name="layout_bg_normal">@color/day_layout_bg_normal</item>
        <!--自定义属性-->
        <item name="lineColor">@color/day_line_color</item>
        <!--自定义属性-->
        <item name="windows_bg">@color/day_windows_bg</item>
        <!--自定义属性-->
        <item name="sliding_block_bg">@drawable/image_sliding_block</item>
        <!--自定义属性-->
        <item name="layout_item_bg">@drawable/day_list_item_background</item>
        <!--提示信息的字体颜色-->
        <item name="android:textColorHint">@color/day_edit_hit_color</item>
        <!--自定义属性-->
        <item name="comment_reply_container_bg">@drawable/day_comment_reply_container_bg</item>
        <!--自定义属性-->
        <item name="message_bg_left">@drawable/chat_from_bg_normal</item>
        <item name="message_bg_right">@drawable/chat_to_bg_normal</item>
        <!--自定义属性-->
        <item name="quickoption_icon_text_selector">@drawable/day_quickoption_icon_text_selector
        </item>
        <item name="quickoption_icon_album_selector">@drawable/day_quickoption_icon_album_selector
        </item>
        <item name="quickoption_icon_photo_selector">@drawable/day_quickoption_icon_photo_selector
        </item>
        <item name="quickoption_icon_voice_selector">@drawable/day_quickoption_icon_voice_selector
        </item>
        <item name="quickoption_icon_scan_selector">@drawable/day_quickoption_icon_scan_selector
        </item>
        <item name="quickoption_icon_note_selector">@drawable/day_quickoption_icon_note_selector
        </item>
        <item name="quickoption_icon_software_selector">@drawable/day_quickoption_icon_software_selector</item>
        <item name="quickoption_icon_find_selector">@drawable/day_quickoption_icon_find_selector</item>
        <item name="quickoption_icon_shake_selector">@drawable/day_quickoption_icon_shake_selector</item>
        <item name="quickoption_icon_city_selector">@drawable/day_quickoption_icon_city_selector</item>
        <!---解决开机闪屏出现短暂白色或者黑色背景-->
        <item name="android:windowContentOverlay">@null</item>
        <!--button的style-->
        <item name="android:buttonStyle">@style/App_ButtonStyle</item>


    </style>

    <style name="App_ButtonStyle">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 夜间模式 -->
    <style name="AppBaseTheme_Night" parent="AppBaseTheme_Night.Base" />

    <style name="AppBaseTheme_Night.Base" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/night_colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/gray</item>
        <item name="android:textColorLink">@color/night_colorPrimary</item>
        <item name="android:colorAccent">@color/night_colorPrimary</item>
        <item name="android:windowBackground">@color/night_windows_bg</item>
        <item name="android:textColor">@color/night_textColor</item>
        <item name="infoTextColor">@color/night_infoTextColor</item>
        <item name="layout_bg_normal">@color/night_layout_bg_normal</item>
        <item name="lineColor">@color/night_line_color</item>
        <item name="windows_bg">@color/night_windows_bg</item>
        <item name="sliding_block_bg">@drawable/night_image_sliding_block</item>
        <item name="layout_item_bg">@drawable/night_list_item_background</item>
        <item name="android:editTextColor">@color/night_edit_color</item>
        <item name="android:textColorHint">@color/night_edit_hit_color</item>
        <item name="comment_reply_container_bg">@drawable/night_comment_reply_container_bg</item>
        <item name="message_bg_left">@drawable/night_chat_from_bg_normal</item>
        <item name="message_bg_right">@drawable/night_chat_to_bg_normal</item>
        <item name="quickoption_icon_text_selector">@drawable/night_quickoption_icon_text_selector
        </item>
        <item name="quickoption_icon_album_selector">
            @drawable/night_quickoption_icon_album_selector
        </item>
        <item name="quickoption_icon_photo_selector">
            @drawable/night_quickoption_icon_photo_selector
        </item>
        <item name="quickoption_icon_voice_selector">
            @drawable/night_quickoption_icon_voice_selector
        </item>
        <item name="quickoption_icon_scan_selector">@drawable/night_quickoption_icon_scan_selector
        </item>
        <item name="quickoption_icon_software_selector">@drawable/night_quickoption_icon_software_selector</item>
        <item name="quickoption_icon_find_selector">@drawable/night_quickoption_icon_find_selector</item>
        <item name="quickoption_icon_city_selector">@drawable/night_quickoption_icon_city_selector</item>
        <item name="quickoption_icon_shake_selector">@drawable/night_quickoption_icon_shake_selector</item>
        <item name="quickoption_icon_note_selector">@drawable/night_quickoption_icon_note_selector
        </item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:buttonStyle">@style/App_ButtonStyle</item>

    </style>

    <!-- 全透明的背景 -->
    <style name="Theme.Transparent" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
