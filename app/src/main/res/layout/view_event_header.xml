<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:minHeight="185dp"
                android:background="@color/white">

    <android.support.v4.view.ViewPager
        android:id="@+id/event_vp"
        style="@style/match_match" />

    <com.teacore.teascript.widget.indicator.CirclePagerIndicator
        android:id="@+id/event_indicator"
        style="@style/match_wrap"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/space_10"
        android:paddingBottom="@dimen/space_10"
        app:circle_indicator_centerHorizontal="true"
        app:circle_indicator_color="@color/white"
        app:circle_indicator_fill_color="@color/teascript"
        app:circle_indicator_indicator_radius="3dp"
        app:circle_indicator_radius="2dp" />

</RelativeLayout>