<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/match_wrap"
                android:padding="@dimen/space_10">

    <com.teacore.teascript.widget.AvatarView
        android:id="@+id/user_av"
        android:layout_width="@dimen/space_48"
        android:layout_height="@dimen/space_48"
        android:layout_margin="@dimen/space_20" />

    <LinearLayout
        style="@style/wrap_wrap"
        android:layout_toRightOf="@id/user_av"
        android:paddingTop="@dimen/space_4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/team_name_tv"
            style="@style/team_member_information"
            android:text="TeaScript"/>

        <TextView
            android:id="@+id/team_username_tv"
            style="@style/team_member_information"
            android:text="陈晓帆"/>

        <TextView
            android:id="@+id/team_email_tv"
            style="@style/team_member_information"
            android:text="chenxiaofan@teascript.com"/>

        <TextView
            android:id="@+id/team_telephone_tv"
            style="@style/team_member_information"
            android:text="18321239262"/>

        <TextView
            android:id="@+id/team_address_tv"
            style="@style/team_member_information"
            android:text="上海 闵行"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/team_telephone_iv"
        style="@style/wrap_wrap"
        android:layout_margin="@dimen/space_10"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_call"/>

</RelativeLayout>