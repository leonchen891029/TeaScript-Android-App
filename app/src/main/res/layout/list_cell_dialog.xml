<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/match_wrap"
                android:background="@drawable/list_cell_dialog_selector"
                android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/content_rl"
        style="@style/match_wrap"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/title_tv"
            style="@style/list_cell_text_dialog"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/global_dialog_padding"
            android:layout_marginRight="@dimen/global_dialog_padding"
            android:layout_toLeftOf="@+id/select_rb"
            android:text="This is item" />

        <RadioButton
            android:id="@+id/select_rb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/global_dialog_padding"
            android:clickable="false"
            android:visibility="visible"/>

    </RelativeLayout>

    <View
        android:id="@+id/list_divider"
        style="@style/list_cell_divider"
        android:layout_below="@id/content_rl"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/global_dialog_padding"
        android:layout_marginRight="@dimen/global_dialog_padding"
        android:visibility="visible"/>

</RelativeLayout>