<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/match_match"
              android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/list_divider_color"
        android:visibility="gone" />

    <RelativeLayout
        style="@style/match_wrap"
        android:background="?attr/layout_item_bg"
        android:padding="@dimen/space_16"
        android:clickable="true">

        <TextView
            android:id="@+id/re_tv1"
            style="@style/wrap_wrap"
            android:layout_marginRight="@dimen/space_4"
            android:text="@string/join_time"
            android:textColor="?attr/infoTextColor"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/join_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/re_tv1"
            android:textColor="?attr/android:textColor"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

    <View
        style="@style/h_line" />

    <RelativeLayout
        style="@style/match_wrap"
        android:background="?attr/layout_item_bg"
        android:padding="@dimen/space_16"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/re_tv2"
            style="@style/wrap_wrap"
            android:layout_marginRight="@dimen/space_4"
            android:text="@string/location"
            android:textColor="?attr/infoTextColor"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/location_tv"
            style="@style/wrap_wrap"
            android:layout_toRightOf="@id/re_tv2"
            android:textColor="?attr/android:textColor"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <View
        style="@style/h_line" />

    <RelativeLayout
        style="@style/match_wrap"
        android:background="?attr/layout_item_bg"
        android:padding="@dimen/space_16"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/re_tv3"
            style="@style/wrap_wrap"
            android:layout_marginRight="@dimen/space_4"
            android:text="@string/development_platform"
            android:textColor="?attr/infoTextColor"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/development_platform_tv"
            style="@style/wrap_wrap"
            android:layout_toRightOf="@id/re_tv3"
            android:textColor="?attr/android:textColor"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <View
        style="@style/h_line" />

    <RelativeLayout
        style="@style/match_wrap"
        android:background="?attr/layout_item_bg"
        android:padding="@dimen/space_16"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/re_tv4"
            style="@style/wrap_wrap"
            android:layout_marginRight="@dimen/space_4"
            android:text="@string/academic_focus"
            android:textColor="?attr/infoTextColor"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/academic_focus_tv"
            style="@style/wrap_wrap"
            android:layout_toRightOf="@id/re_tv4"
            android:textColor="?attr/android:textColor"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <View
        style="@style/h_line" />


</LinearLayout>