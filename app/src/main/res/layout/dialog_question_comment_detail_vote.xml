<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/match_wrap"
              android:minWidth="250dp"
              android:padding="@dimen/space_16"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        style="@style/wrap_wrap"
        android:text="为这个答案投票"
        android:textSize="@dimen/text_size_16"
        android:textColor="#6A6A6A"/>

    <LinearLayout
        style="@style/match_wrap"
        android:layout_marginTop="@dimen/space_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vote_up_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_full_vote_up_selector"
            android:gravity="center_horizontal"
            android:drawablePadding="@dimen/space_4"
            android:text="@string/vote_up" />

        <ProgressBar
            android:id="@+id/vote_pb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/vote_down_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_full_vote_down_selector"
            android:gravity="center_horizontal"
            android:drawablePadding="@dimen/space_4"
            android:text="@string/vote_down"/>

    </LinearLayout>
</LinearLayout>