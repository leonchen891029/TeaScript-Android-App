<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/match_wrap"
              android:background="@drawable/improve_list_cell_bg_selector"
              android:paddingLeft="@dimen/space_16"
              android:paddingTop="@dimen/space_16"
              android:orientation="vertical">

    <LinearLayout
        style="@style/match_wrap"
        android:orientation="horizontal">

        <com.teacore.teascript.widget.CircleImageView
            android:id="@+id/question_author_civ"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/widget_dface"/>

        <LinearLayout
            style="@style/match_wrap"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_title_tv"
                style="@style/match_wrap"
                android:layout_marginBottom="1dp"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"
                android:text="都不会报警啦"/>

            <TextView
                android:id="@+id/question_content_tv"
                style="@style/match_wrap"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:maxLines="3"
                android:minLines="1"
                android:textSize="14sp"
                android:text="简直凶残"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/match_wrap"
        android:layout_marginLeft="@dimen/space_44"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question_history_tv"
            style="@style/wrap_wrap"
            android:layout_gravity="center"
            android:lines="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/count_text_color_light"
            android:textSize="12sp"
            android:text="2012-12-01 22:10"/>

        <include layout="@layout/item_info_see_comment"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="1px"
        android:background="@color/list_divider_color" />

</LinearLayout>