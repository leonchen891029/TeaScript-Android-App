<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/match_wrap"
              android:background="@drawable/item_bg_selector"
              android:paddingLeft="@dimen/space_16"
              android:orientation="vertical">

    <LinearLayout
        style="@style/match_wrap"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_4"
        android:paddingRight="@dimen/space_8"
        android:orientation="horizontal">

        <com.teacore.teascript.widget.AvatarView
            android:id="@+id/user_av"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/space_2"
            android:layout_marginBottom="@dimen/space_2"
            android:src="@drawable/widget_dface" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                style="@style/wrap_wrap"
                android:text="18岁的leon"
                android:textColor="#111111"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/pub_date_tv"
                style="@style/wrap_wrap"
                android:text="12楼 6分钟前"
                android:textColor="#6a6a6a"
                android:textSize="12sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/comment_btn"
            style="@style/wrap_match"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_8"
            android:paddingBottom="@dimen/space_16"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_comment"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/refers_ll"
        style="@style/match_wrap"
        android:orientation="vertical"/>

    <com.teacore.teascript.widget.TeatimeTextView
        android:id="@+id/content_ttv"
        style="@style/wrap_wrap"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginBottom="@dimen/space_4"
        android:paddingRight="@dimen/space_16"
        android:text="leon,TeaScript这么吊，为什么我比赛的时候看不到?"
        android:textColor="#111111"
        android:textSize="14sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:background="@color/list_divider_color"/>

</LinearLayout>