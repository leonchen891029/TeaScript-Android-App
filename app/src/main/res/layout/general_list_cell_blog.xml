<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/match_wrap"
              android:background="@drawable/improve_list_cell_bg_selector"
              android:paddingLeft="@dimen/space_16"
              android:paddingTop="@dimen/space_16"
              android:orientation="vertical">

    <LinearLayout
        style="@style/match_wrap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/blog_title_tv"
            style="@style/wrap_wrap"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/space_16"
            android:maxLines="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/title_text_color_light"
            android:textSize="16sp"
            android:text="枫哥牛逼!"/>

    </LinearLayout>

    <TextView
        android:id="@+id/blog_body_tv"
        style="@style/match_wrap"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/space_4"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_4"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:maxLines="3"
        android:minLines="1"
        android:textSize="14sp"
        android:text="没我没我，高级天火!"/>

    <LinearLayout
        style="@style/match_wrap"
        android:layout_marginRight="@dimen/space_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/blog_history_tv"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:lines="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/count_text_color_light"
            android:textSize="12sp"
            android:text="2017-6-1 66:66"/>

        <include layout="@layout/item_info_see_comment" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="1px"
        android:layout_marginTop="16dp"
        android:background="@color/list_divider_color" />

</LinearLayout>