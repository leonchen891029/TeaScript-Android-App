<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/match_match"
              android:background="?attr/layout_item_bg"
              android:scrollbars="none"
              android:orientation="vertical">

    <LinearLayout
        style="@style/match_wrap"
        android:orientation="vertical" >

        <View
            style="@style/h_line"
            android:layout_marginTop="@dimen/space_20"/>

        <RelativeLayout
            android:id="@+id/accept_rl"
            style="@style/option_item_ll" >

            <TextView
                style="@style/option_item_text_parent"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16"
                android:text="@string/notice_accept"/>

            <com.teacore.teascript.widget.TSSwitchButton
                android:id="@+id/accept_sb"
                android:layout_width="48dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <View
            style="@style/h_line"/>

        <View
            style="@style/h_line"
            android:layout_marginTop="@dimen/space_20"/>

        <RelativeLayout
            android:id="@+id/voice_rl"
            style="@style/option_item_ll" >

            <TextView
                style="@style/option_item_text_parent"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16"
                android:text="@string/notice_voice"/>

            <com.teacore.teascript.widget.TSSwitchButton
                android:id="@+id/voice_sb"
                android:layout_width="48dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <View
            style="@style/h_line"/>

        <RelativeLayout
            android:id="@+id/vibration_rl"
            style="@style/option_item_ll" >

            <TextView
                style="@style/option_item_text_parent"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16"
                android:text="@string/notice_vibration"/>

            <com.teacore.teascript.widget.TSSwitchButton
                android:id="@+id/vibration_sb"
                android:layout_width="48dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <View
            style="@style/h_line"/>

        <View
            style="@style/h_line"
            android:layout_marginTop="@dimen/space_20"/>

        <RelativeLayout
            android:id="@+id/app_exit_rl"
            style="@style/option_item_ll" >

            <TextView
                style="@style/option_item_text_parent"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16"
                android:text="@string/notice_app_exit"/>

            <com.teacore.teascript.widget.TSSwitchButton
                android:id="@+id/app_exit_sb"
                android:layout_width="48dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            style="@style/h_line"/>
    </LinearLayout>










</LinearLayout>