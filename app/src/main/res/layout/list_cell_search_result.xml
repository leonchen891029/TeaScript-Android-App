<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/match_wrap"
                android:background="?attr/layout_item_bg"
                android:padding="@dimen/space_8">

    <LinearLayout
        android:id="@+id/title_ll"
        style="@style/wrap_wrap"
        android:layout_marginRight="@dimen/space_4"
        android:layout_marginBottom="@dimen/space_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tip_iv"
            style="@style/wrap_wrap"
            android:layout_marginRight="@dimen/space_2"
            android:src="@drawable/icon_today"/>

        <TextView
            android:id="@+id/title_tv"
            style="@style/list_text_title"
            android:maxLines="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/description_tv"
        style="@style/wrap_wrap"
        android:layout_below="@id/title_ll"
        android:layout_marginBottom="@dimen/space_5"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="?attr/infoTextColor" />

    <LinearLayout
        style="@style/match_wrap"
        android:layout_below="@id/description_tv"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/author_tv"
            style="@style/list_text_info"
            android:layout_marginRight="@dimen/space_10" />

        <IconTextView
            style="@style/list_text_info"
            android:text="{fa-clock-o} " />

        <TextView
            android:id="@+id/time_tv"
            style="@style/list_text_info"
            android:layout_marginRight="10dp" />

        <IconTextView
            style="@style/list_text_info"
            android:text="{fa-comments-o} " />

        <TextView
            android:id="@+id/comment_count_tv"
            style="@style/list_text_info" />

    </LinearLayout>


</RelativeLayout>