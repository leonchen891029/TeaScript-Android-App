<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/match_wrap"
                android:background="?attr/layout_item_bg"
                android:paddingBottom="@dimen/space_10">

    <ImageView
        android:id="@+id/event_status_iv"
        android:layout_width="@dimen/space_36"
        android:layout_height="@dimen/space_36"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/event_iv"
        android:layout_width="@dimen/space_60"
        android:layout_height="@dimen/space_80"
        android:layout_margin="@dimen/space_10" />

    <LinearLayout
        style="@style/wrap_wrap"
        android:layout_toRightOf="@id/event_iv"
        android:layout_marginTop="@dimen/space_10"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/event_title_tv"
            style="@style/wrap_wrap"
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginBottom="@dimen/space_10"
            android:textColor="?attr/android:textColor"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/event_time_tv"
            style="@style/wrap_wrap"
            android:layout_below="@id/event_title_tv"
            android:layout_toRightOf="@id/event_iv"
            android:textColor="?attr/infoTextColor" />

        <TextView
            android:id="@+id/event_spot_tv"
            style="@style/wrap_wrap"
            android:layout_below="@id/event_time_tv"
            android:layout_toRightOf="@id/event_iv"
            android:textColor="?attr/infoTextColor" />

    </LinearLayout>

</RelativeLayout>