<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/match_wrap"
              android:background="@drawable/improve_list_cell_bg_selector"
              android:orientation="vertical">

    <LinearLayout
        style="@style/match_match"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/event_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_16"
            android:scaleType="centerCrop"/>

        <LinearLayout
            style="@style/wrap_match"
            android:layout_margin="@dimen/space_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_title_tv"
                style="@style/match_wrap"
                android:layout_gravity="top"
                android:layout_marginRight="@dimen/space_16"
                android:gravity="top"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/title_text_color_light"
                android:textSize="16sp"
                android:text="Large Text" />

            <LinearLayout
                style="@style/match_wrap"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/event_state_tv"
                    style="@style/wrap_wrap"
                    android:paddingLeft="@dimen/space_4"
                    android:paddingTop="@dimen/space_2"
                    android:paddingRight="@dimen/space_4"
                    android:paddingBottom="@dimen/space_2"
                    android:textColor="@color/text_light"
                    android:textSize="10sp"
                    android:text="正在报名" />

                <TextView
                    android:id="@+id/event_type_tv"
                    style="@style/wrap_wrap"
                    android:layout_marginLeft="@dimen/space_5"
                    android:background="@drawable/bg_event_type"
                    android:paddingLeft="@dimen/space_4"
                    android:paddingTop="@dimen/space_2"
                    android:paddingRight="@dimen/space_4"
                    android:paddingBottom="@dimen/space_2"
                    android:textColor="#9d9d9d"
                    android:textSize="10sp"
                    android:text="技术交流" />

            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap"
                android:layout_marginTop="@dimen/space_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/event_pub_date_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/space_16"
                    android:gravity="left|center"
                    android:lines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/count_text_color_light"
                    android:textSize="12sp"
                    android:text="2012-12-01 22:10" />

                <TextView
                    android:id="@+id/event_member_tv"
                    style="@style/wrap_wrap"
                    android:gravity="center_vertical"
                    android:textColor="#9d9d9d"
                    android:textSize="12sp"
                    android:text="12人参与" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/h_line"
        android:layout_marginLeft="16dp" />

</LinearLayout>