<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/openid_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="?attr/android:textColor"
        android:text="你好，创造者"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/infoTextColor"
        android:text="如果你已经注册过TeaScript账户"/>

    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/bind_btn"
        style="@style/button_common_blue"
        android:layout_marginTop="10dp"
        android:text="绑定到已有的账号" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="?attr/infoTextColor"
        android:text="您还没有TeaScript账户"/>

    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/reg_btn"
        style="@style/button_common_blue"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="立即成为TeaScripter" />



</LinearLayout>