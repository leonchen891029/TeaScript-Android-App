<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_match"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/content_nsv"
        style="@style/match_match"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_scrollFlags="scroll|enterAlways">

        <LinearLayout
            style="@style/match_match"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@color/teascript"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/event_img_iv"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginTop="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:layout_marginBottom="@dimen/space_24"
                    android:scaleType="fitXY"
                    android:src="@drawable/qr_scan_mask"/>

                <LinearLayout
                    style="@style/match_match"
                    android:layout_marginTop="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:layout_marginBottom="@dimen/space_16"
                    android:layout_toRightOf="@id/event_img_iv"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/event_title_tv"
                        style="@style/match_wrap"
                        android:layout_gravity="top"
                        android:layout_marginRight="@dimen/space_16"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/space_4"
                        android:maxLines="3"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="TeaScript China 2017技术峰会"/>

                    <TextView
                        android:id="@+id/event_originator_tv"
                        style="@style/match_wrap"
                        android:layout_marginTop="@dimen/space_4"
                        android:layout_marginBottom="@dimen/space_4"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="发起人:Leon"/>

                    <TextView
                        android:id="@+id/event_type_tv"
                        style="@style/match_wrap"
                        android:layout_marginTop="@dimen/space_4"
                        android:layout_marginBottom="@dimen/space_4"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="类型:技术交流"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/space_4"
                        android:layout_marginBottom="@dimen/space_4"
                        android:gravity="bottom"
                        android:minHeight="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/event_member_tv"
                            style="@style/match_wrap"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:text="24人参与"/>

                        <TextView
                            android:id="@+id/event_status_tv"
                            style="@style/wrap_wrap"
                            android:paddingLeft="@dimen/space_4"
                            android:paddingTop="@dimen/space_2"
                            android:paddingRight="@dimen/space_4"
                            android:paddingBottom="@dimen/space_2"
                            android:background="@drawable/bg_event_detail_ing"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:text="正在报名"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap"
                android:paddingLeft="@dimen/space_16"
                android:paddingTop="@dimen/space_8"
                android:paddingRight="@dimen/space_16"
                android:paddingBottom="@dimen/space_8"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:src="@drawable/icon_calendar"/>
                <TextView
                    android:id="@+id/event_pub_date_tv"
                    style="@style/match_wrap"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/space_16"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:text="2017-7-11 11:11"/>
            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:layout_marginLeft="@dimen/space_16"
                  android:background="@color/list_divider_color"/>

            <LinearLayout
                style="@style/wrap_wrap"
                android:paddingLeft="@dimen/space_16"
                android:paddingTop="@dimen/space_8"
                android:paddingRight="@dimen/space_16"
                android:paddingBottom="@dimen/space_8"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:src="@drawable/icon_ticket"/>

                <TextView
                    android:id="@+id/event_cost_tv"
                    style="@style/match_wrap"
                    android:layout_marginLeft="@dimen/space_16"
                    android:lineSpacingExtra="@dimen/space_4"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:text="免费"/>
            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:layout_marginLeft="@dimen/space_16"
                  android:background="@color/list_divider_color"/>

            <LinearLayout
                style="@style/match_wrap"
                android:paddingLeft="@dimen/space_16"
                android:paddingTop="@dimen/space_8"
                android:paddingRight="@dimen/space_16"
                android:paddingBottom="@dimen/space_8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:layout_marginRight="@dimen/space_16"
                    android:src="@drawable/icon_location"/>

                <TextView
                    android:id="@+id/event_location_tv"
                    style="@style/match_wrap"
                    android:layout_gravity="center_vertical"
                    android:lineSpacingExtra="@dimen/space_4"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:text="大会地址:上海-延安中路1218号-静安香格里拉大酒店"/>

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:layout_marginLeft="@dimen/space_16"
                  android:background="@color/list_divider_color"/>

            <TextView
                style="@style/match_wrap"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"
                android:lineSpacingExtra="@dimen/space_4"
                android:textColor="#111111"
                android:textSize="18sp"
                android:text="活动介绍:"/>

            <FrameLayout
                android:id="@+id/webview_fl"
                style="@style/match_match"
                android:padding="@dimen/space_16"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <View
        style="@style/h_line"
        android:layout_height="2px"
        app:layout_anchor="@+id/operate_ll"
        app:layout_anchorGravity="top"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_scrollFlags="scroll|enterAlways"/>

    <LinearLayout
        android:id="@+id/operate_ll"
        style="@style/match_wrap"
        android:background="@color/white"
        app:layout_anchor="@id/content_nsv"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="@string/scrolling_auto_hide_behavior"
        app:layout_scrollFlags="scroll|enterAlways"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/favorite_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="@dimen/space_4"
            android:paddingBottom="@dimen/space_4"
            android:background="@drawable/event_favorite_selector"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favorite_iv"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"
                android:src="@drawable/icon_favor_selector" />

            <TextView
                android:id="@+id/favorite_tv"
                style="@style/wrap_wrap"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginRight="@dimen/space_16"
                android:text="收藏"
                android:textColor="@color/text_dark"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sign_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/event_sign_selector"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sign_iv"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_8"
                android:src="@drawable/sign_selector" />

            <TextView
                android:id="@+id/apply_status_tv"
                style="@style/wrap_wrap"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginRight="@dimen/space_16"
                android:text="我要报名"
                android:textColor="@color/text_sign_selector"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>