<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/match_match"
              android:background="?attr/windows_bg"
              android:orientation="vertical" >

    <RelativeLayout
        style="@style/wrap_wrap"
        android:padding="@dimen/space_8" >

        <LinearLayout
            style="@style/wrap_wrap"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/left_iv"
                android:layout_width="@dimen/space_24"
                android:layout_height="@dimen/space_24"
                android:src="@drawable/icon_diary_back" />

            <TextView
                android:id="@+id/title_tv"
                style="@style/wrap_wrap"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:gravity="center"
                android:textColor="?infoTextColor"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold"
                android:text="TeaScript 2.0发布"/>

            <ImageView
                android:id="@+id/right_iv"
                android:layout_width="@dimen/space_24"
                android:layout_height="@dimen/space_24"
                android:src="@drawable/icon_diary_forward" />
        </LinearLayout>

        <ImageView
            android:id="@+id/calendar_iv"
            android:layout_width="@dimen/space_32"
            android:layout_height="@dimen/space_32"
            android:layout_alignParentRight="true"
            android:padding="@dimen/space_5"
            android:src="@drawable/icon_diary_calendar" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/diary_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>